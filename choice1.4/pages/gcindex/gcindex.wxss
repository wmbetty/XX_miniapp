/* pages/test/test.wxss */
page{
  background: #F5F6F8
}
.card-container{
  display: block;
  margin: 0 auto;
  width: 690rpx;
}
.card-item{
  width: 100%;margin-top: 60rpx;
  border-radius: 20rpx;background: #fff;
  overflow: hidden;position: relative;
}
.card-head{
  margin: 60rpx 40rpx 0;
  display: flex;justify-content: space-between;align-items: center;
}
.u-avatar{
  width: 72rpx;height: 72rpx;margin-right: 20rpx;
  border: 1px solid #D8D8D8;border-radius: 50%;
}
.u-info{
  display: flex;align-items: center;
}
.u-gender{
  width: 30rpx;height: 30rpx;margin-left: 20rpx;
}
.u-name{max-width: 184rpx;overflow: hidden;white-space:nowrap;text-overflow:ellipsis;word-break: break-all;}
.share-icon{
  width: 38rpx;height: 38rpx;
}
.card-title{
  width: 558rpx;height: 260rpx;margin: 48rpx auto 42rpx;color: #343434;font-size: 40rpx;font-weight: bold;text-align: center;
  display: flex;align-items: center;justify-content: center;
  /* overflow: hidden;white-space:nowrap;text-overflow:ellipsis;word-break: break-all; */
}
.card-hot{
  background: #F4F4F4;border-radius: 26rpx;margin: 0 auto 20rpx;
  width: 180rpx;height: 40rpx;color: #C7C7CC;font-size: 28rpx;
  display: flex;align-items: center;
  justify-content: center;
}
.hot-icon{
  width: 30rpx;height: 30rpx;margin-right: 6rpx;
}
.card-options{
  display: flex;
  /* justify-content: space-between;padding: 0 20rpx; */
  position: absolute;bottom: 60rpx;left: 0;width: 100%;
}
.card-img-options{
  position: absolute;bottom: 0;left: 0;width: 100%;
  display: flex;
}
.option-item{
  width: 280rpx;height: 320rpx;overflow: hidden;position: relative;
  display: flex;align-items: center;justify-content: center;
  font-size: 36rpx;color: #576B95;padding: 0 20rpx;
  box-shadow:0 4px 10px rgba(0,0,0,0.1);
}
.option-item:first-child{
  margin-left: 20rpx;margin-right: 10rpx;
}
.option-img-item{
  width: 320rpx;height: 380rpx;margin-left: 18rpx;
  position: relative;
}
.opton-mask{
  position: absolute;left: 0;top: 0;overflow: hidden;
  width: 100%;height: 100%;background: rgba(0, 0, 0, 0.5);
}
.percent-item{
  display: flex;align-items: center;justify-content: center;
  margin: 80rpx 60rpx;color: #fff;
}
.img-percent-item{
  display: flex;align-items: center;
  margin: 110rpx 60rpx;color: #fff;
}
.bigger-num{
  font-size: 100rpx;font-weight: bold;margin-right: 6rpx;text-align: right;
}
.small-num{
  font-size: 60rpx;text-align: left;
}
.red-num{color: #E74C49}
.option-img{width: 100%;height: 100%;}
.head-right-cont{display: flex;align-items: center;}
.total-comment{
  color:#888;font-size:28rpx;margin-left: 12rpx;
}
.comment-cont{display: flex;align-items: center;margin-right: 40rpx;}
/* .hot-text{margin-right: 50rpx;} */
.disabled-img{filter:blur(5px);width:100%;height:100%;position:absolute;left:0;top:0}
.mask-img{width:100%;height:100%;position:absolute;left:0;top:0;z-index: 999}
.voted-thumb-box{width:440rpx;height:440rpx;position:absolute;left:23%;top:160px}
.thumb2{width:360rpx;height:360rpx;position:absolute;left:6%;top:-2%;animation:thumb2 1s linear;opacity:0;z-index:15;animation-delay:.3s}
.vote-circle{width:360rpx;height:360rpx;position:absolute;left:5%;top:-4%;animation:circle 1s linear;opacity:0}
@keyframes thumb2{
  15%{transform:scale(0.4);opacity:1}
  30%{transform:scale(0.8);opacity:.5}
  100%{transform:scale(1);opacity:0}
}
@keyframes circle{
  15%{transform:rotate(120deg);opacity:1}
  30%{transform:rotate(240deg);opacity:.5}
  100%{transform:rotate(360deg);opacity:0}
}
.bt-img{width:160rpx;height:80rpx;margin:0 -32rpx 24rpx 0;animation:voteAni 2s}
@keyframes voteAni{0%,100%{opacity:1;transform:scale(1.5)}50%{opacity:.5;transform:scale(0.6)}}
.show-number{display:block;width:100%;animation:tada .5s .2s ease both}
@keyframes tada{
  0%{transform:scale(1)}
  10%,20%{transform:scale(0.6) rotate(-3deg)}
  30%,50%,70%,90%{transform:scale(1) rotate(3deg)}
  40%,60%,80%{transform:scale(1.2) rotate(-3deg)}
  100%{transform:scale(1) rotate(0)}
}
.share-mask{position:fixed;left:0;top:0;width:100%;background:rgba(0,0,0,0.5);z-index:99;height: 100%;}
.share-btn-container {
	position: absolute;
	bottom: 20rpx;
	width: 92%;
	left: 4%
}
.slide-up {
	animation: slideup .3s linear
}
@keyframes slideup {
	from {
		transform: translateY(100%)
	}

	to {
		transform: translateY(0)
	}
}
.slide-down {
	animation: slidedown .3s linear
}
@keyframes slidedown {
	from {
		transform: translateY(0)
	}

	to {
		transform: translateY(100%)
	}
}
.wechat-container {
	border-radius: 10rpx;
	width: 100%;
	background: #fff;
	height: 240rpx;
	margin-bottom: 20rpx
}
.wechat-icon {
	width: 80rpx;
	height: 80rpx;
	margin-right: 32rpx;
	margin-top: 18rpx
}
.moment-icon {
	margin-top: 4rpx
}
.wechat-text {
	margin-top: 18rpx
}
.cancel-btn {
	width: 100%;
	height: 100rpx;
	background: #e5e7ed;
	color: #888;
	border-radius: 10rpx;
	font-size: 36rpx;
	display: flex;
	justify-content: center;
	align-items: center
}

button.wechat-item-box {
	margin-left: 40rpx;
	padding: 10rpx 0;
	display: flex;
	font-size: 36rpx;
	color: #343434;
	line-height: 2;
	background: 0
}

button::after {
	border: 0
}

view.wechat-item-box {
	margin-left: 40rpx;
	padding: 12rpx 0;
	display: flex;
	font-size: 36rpx;
	color: #343434;
	line-height: none;
	background: 0
}

.wechat-item-box:first-child {
	border-bottom: 1px solid #f1f1f1
}

.up-icon {
	width: 26rpx;
	height: 26rpx;
	position: absolute;
	left: 48%;
	background: url('data:image/png;base64,') no-repeat;
	background-size: 100% 100%
}

.up-active {
	background-size: 100% 100%;
	opacity: 0
}

.no-active {
	animation: arrowAnim 1s infinite
}

@keyframes arrowAnim {
	0%,100% {
		opacity: 1;
		transform: translateY(10px)
	}

	50% {
		opacity: .5;
		transform: translateY(-1px)
	}
}
