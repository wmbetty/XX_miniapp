/* pages/mine/mine.wxss */
page{background: #F4F4F8;position: relative;}
.mine-banner{
    height: 400rpx;width: 100%;position: relative;
    /* background: linear-gradient(#E64340, #F3347B); */
}
.nums-box{
    position: absolute;right: 30rpx;bottom: 10px;z-index: 999;
    display: flex;font-size: 26rpx;align-items: center;
}
.gold-coin{
    width: 52rpx;height: 52rpx;
    /*margin-top: 10rpx;*/
    /*width: 58rpx;height: 58rpx;margin-top: 5rpx;*/
}
.point-box{margin-left: 20rpx;font-size: 52rpx;color: #fff;}
.my-avatar{
    position: absolute;left: 30rpx;bottom: -76rpx;z-index: 999;
    width: 172rpx;height: 172rpx;border-radius: 50%;
    border: 4rpx solid #efefef;
}
.mine-infos{
    display: flex;padding: 100rpx 46rpx 40rpx;
    background: #fff;position: relative;
}
.my-name{
    font-size: 52rpx;color: #343434;font-weight: 600;margin-right: 20rpx;
}
.my-gender{width: 30rpx;height: 30rpx;margin-left: 20rpx;margin-top: 26rpx;}
.tab-head{
    display: flex;font-size: 36rpx;background: #fff;
    padding: 0 0 0 36rpx;color: #999;
}
.tab-head-fixed{position: fixed;top:0;left: 0;width: 100%;padding-top: 20rpx;
    z-index: 999;border-bottom: 1px solid #eee;}
.blue-font{
    color: #343434;font-weight: bold;
}
.bottom-line{
    width: 80rpx;height: 10rpx;background: #343434;margin: 12rpx 23rpx;
}
.blue-line{background: #343434;}
.my-publish-item{margin-right: 60rpx;}
/* .tab-container{} */
.tab-content{margin-bottom: 120rpx;}
.tab-list-item{background: #fff;padding: 36rpx 20rpx 20rpx 30rpx;margin-bottom: 10rpx;position: relative;}
.delete-icon{
    position: absolute;right: 0;top: 0;
    width: 68rpx;height: 68rpx;
}
.delete-bg{background: #E5E7ED;}
.item-title{color: #343434;font-size: 32rpx;margin-bottom: 18rpx;}
.item-datas{
    display: flex;justify-content: space-between;font-size: 28rpx;
}
.percent-cont-box{display: flex;}
.percent-box{
    display: flex;width: 200rpx;height: 8rpx;border-radius: 4rpx;margin: 15rpx 14rpx;
}
.right-progress{height: 100%;background: #62559D;}
.left-progress{height: 100%;background: #11B591;}
.left-pg-text{color: #11B591;width: 74rpx;}
.right-pg-text{color: #62559D;width: 74rpx;}
.hot-cont-box{display: flex;color: #C7C7CC;}
.hot-icon{
    width: 26rpx;height: 28rpx;margin-right: 12rpx;margin-top: 4rpx;
}
.tab-content-empty{
    padding-top: 80rpx;margin-bottom: 140rpx;
}
.my-bg{
    position: absolute;top: 0;left: 0;width: 100%;height: 100%;
}
.is-iphone{padding-bottom: 30rpx;}
.list-hover{
    background: #ededed;
}
.msg-box{
    position: absolute;right: 30rpx;
    width: 120rpx;height: 64rpx;border: 1px solid #999;border-radius: 34rpx;
    font-size: 36rpx;color: #999;text-align: center;line-height: 64rpx;
}
.msg-red-dot{
    position: absolute;top:0;right: 0;
    width: 20rpx;height: 20rpx;border-radius: 50%;background: #E74C49;
  }
.nomore-text{color: #c7c7c7;font-size: 24rpx;text-align: center;padding: 20rpx 0;}